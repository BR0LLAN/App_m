<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/borderline_for_recycle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/box_image"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="3dp"
            android:layout_centerHorizontal="true">

            <ProgressBar
                android:id="@+id/progress_bar_BF_s"
                android:layout_width="100dp"
                android:layout_height="100dp"
                style="?android:progressBarStyleHorizontal"
                android:progress="80"
                android:layout_gravity="center_horizontal|center_vertical"
                android:theme="@style/CircularProgress"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:progressDrawable="@drawable/circle"/>

            <ImageView
                android:id="@+id/box_image_product"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                 />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/delete_product_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_baseline_clear_24"
            android:layout_alignParentRight="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/box_image"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:paddingRight="5dp">


            <TextView
                android:id="@+id/b_title_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto"
                android:layout_below="@+id/b_price_product"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="#D4D4BD"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/b_price_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/roboto"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="#D4D4BD"
                android:textSize="16sp"
                android:textStyle="bold" />




        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>