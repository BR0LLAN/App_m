<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/borderline_for_recycle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/image_product"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/orig"
            />

        <ImageView
            android:id="@+id/btn_delete_p"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_clear_24"
            android:layout_alignParentRight="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_product"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/b_title_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/roboto"
                android:paddingLeft="5dp"
                android:paddingRight="50dp"
                android:textColor="#D4D4BD"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/b_price_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="8dp"
                android:layout_centerVertical="true"
                android:drawableRight="@drawable/ic_free_icon_ruble"
                android:layout_below="@+id/b_title_product"
                android:fontFamily="@font/roboto"
                android:paddingLeft="5dp"
                android:paddingRight="50dp"
                android:textColor="#D4D4BD"
                android:textSize="16sp"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/counter_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_box1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/count_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/borderline_for_recycle"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="1"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/button3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textAlignment="center" />
            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>